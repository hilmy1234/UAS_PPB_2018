<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hilmyabcd.uasppb.Bayongbong">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/GGSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="GG Sport Centre Futsal"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/gbrggss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ggss" />
        <TextView
            android:id="@+id/ketggss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Lapang GG Sport Centre Futsal
Jl. Raya Bayongbong, Panembong, Bayongbong, Kabupaten Garut, Jawa Barat 44162"
            android:textAlignment="center" />
    </LinearLayout>
</ScrollView>
