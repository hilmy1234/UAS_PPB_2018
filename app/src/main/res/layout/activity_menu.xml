<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hilmyabcd.uasppb.Menu"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO FUTSAL"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilihan Tempat :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/garutkota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garut Kota"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/limbangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limbangan"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/samarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Samarang"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/bayongbong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayongbong"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/cilawu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cilawu"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
