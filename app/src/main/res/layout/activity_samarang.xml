<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hilmyabcd.uasppb.Samarang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/holywood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="Holywood Futsal"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/gbrholywood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hollywood" />
        <TextView
            android:id="@+id/ketholywood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Lapang RCM Futsal
Sirnajaya, Pasirwangi, Kabupaten Garut, Jawa Barat 44161"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/toblong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="Toblong Futsal"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/gbrtoblong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/toblong" />
        <TextView
            android:id="@+id/kettoblong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Lapang Futsal Toblong
Jl. Pasirwangi No.20, Padaawas, Pasirwangi, Kabupaten Garut, Jawa Barat 44161"
            android:textAlignment="center" />
    </LinearLayout>

</ScrollView>
