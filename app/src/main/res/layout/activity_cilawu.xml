<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hilmyabcd.uasppb.Cilawu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/panamur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="Panamur Futsal"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/gbrpanamur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/panamur" />
        <TextView
            android:id="@+id/ketpanamur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Lapang Panamur Futsal
Kp Panamur, Kersamanah, Garut, Kabupaten Garut, Jawa Barat 44185"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>
